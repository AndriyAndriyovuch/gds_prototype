<div class="mx-auto p-6">
  <h1 class="text-3xl font-bold text-center mb-8">Hotel Offers</h1>

  <% if flash[:alert] %>
    <div class="bg-red-500 text-white text-center p-3 rounded-lg mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% @offers.each do |offer| %>
    <div class="bg-white shadow-lg rounded-xl p-6 mb-6">
      <h2 class="text-2xl font-bold text-gray-800 mb-2"><%= offer.dig("hotel", "name") %></h2>

      <% offer["offers"].each do |room_offer| %>
        <div class="border-t border-gray-200 mt-4 pt-4">
          <p class="text-lg font-semibold"><%= room_offer.dig("room", "name") %></p>
          <p class="text-gray-600"><%= room_offer.dig("description", "text") %></p>
          <p class="text-gray-800 font-bold mt-2">Price: <%= room_offer.dig("price", "total") %> <%= room_offer.dig("price", "currency") %></p>
          <p class="text-gray-500 text-sm">Check-in: <%= room_offer["checkInDate"] %> | Check-out: <%= room_offer["checkOutDate"] %></p>

          <a href="<%= offer_details_hotels_path(offer_id: room_offer["id"]) %>" target="_blank" class="mt-3 inline-block text-blue-600 hover:underline">View Details</a>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


